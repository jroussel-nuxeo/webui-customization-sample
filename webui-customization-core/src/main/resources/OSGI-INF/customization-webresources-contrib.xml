<?xml version="1.0"?>

<component name="org.nuxeo.dam.web.ui.resources.contrib">

    <require>org.nuxeo.web.ui.resources</require>

    <extension target="org.nuxeo.ecm.platform.WebResources" point="resources">
        <resource name="my-element.html" type="import">
            <uri>/ui/custom-elements/my-element.html</uri>
        </resource>
    </extension>

    <extension target="org.nuxeo.ecm.platform.WebResources" point="bundles">
        <bundle name="web-ui">
            <resources append="true">
                <resource>my-element.html</resource>
            </resources>
        </bundle>
    </extension>

</component>